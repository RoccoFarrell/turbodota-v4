generator client {
  provider = "prisma-client-js"
}

// datasource db {
//   provider = "postgresql"
//   url      = env("DEV_URL")
// }

datasource db {
  provider = "postgresql"
}

// user models
model User {
  id           String      @id @unique
  name         String?
  username     String      @unique
  account_id   Int         @unique
  steam_id     BigInt?     @unique
  profile_url  String?
  avatar_url   String?
  roles        String?
  createdDate  DateTime    @default(now())
  lastUpdated  DateTime    @default(now())
  key          Key[]
  auth_session Session[]
  randoms      Random[]
  user_prefs   UserPrefs[]
  leagues      League[]
  //player_match_details PlayersMatchDetail[]
  dota_user    DotaUser?   @relation(fields: [account_id], references: [account_id])

  //matches      Match[]
  Turbotown        Turbotown[]
  userCards        UserCard[]
  dotaDeckGames    DotaDeckGame[]
  incrementalRuns  IncrementalRun[]
  incrementalSaves IncrementalSave[]
}

model UserPrefs {
  id         Int    @id @default(autoincrement())
  account_id Int
  name       String
  value      String
  user       User?  @relation(fields: [account_id], references: [account_id])

  @@unique([account_id, name], name: "userPlusName")
}

model DotaUser {
  account_id    Int             @id @unique
  lastUpdated   DateTime
  createdDate   DateTime        @default(now())
  oldestMatch   DateTime?
  newestMatch   DateTime?
  oldestMatchID BigInt?
  newestMatchID BigInt?
  display_name  String? // from OpenDota when added by account ID (no Steam login)
  avatar_url    String? // from OpenDota when added by account ID
  leagues       League[]
  seasons       Season[]
  user          User?
  FriendshipMMR FriendshipMMR[]
  games         SeasonUser[]

  @@index([account_id])
}

//match models
model Match {
  id            Int      @id @default(autoincrement())
  match_id      BigInt
  account_id    Int
  assists       Int
  average_rank  Int?
  deaths        Int
  duration      Int
  game_mode     Int
  hero_id       Int
  kills         Int
  leaver_status Int?
  lobby_type    Int?
  party_size    Int?
  player_slot   Int
  radiant_win   Boolean
  skill         Int?
  start_time    BigInt
  hero_variant  Int?
  version       Int?
  randoms       Random[]
  //user          User?   @relation(fields: [account_id], references: [account_id])

  @@unique([match_id, account_id], name: "matchPlusAccount")
}

model MatchDetail {
  match_id                BigInt               @id @unique
  radiant_win             Boolean
  duration                Int
  pre_game_duration       Int
  start_time              BigInt
  tower_status_radiant    Int
  tower_status_dire       Int
  barracks_status_radiant Int
  barracks_status_dire    Int
  first_blood_time        Int
  patch                   Int
  radiant_score           Int
  dire_score              Int
  average_rank            Int?
  players                 PlayersMatchDetail[]
  FriendshipMMR           FriendshipMMR[]
}

model PlayersMatchDetail {
  id               Int          @id @default(autoincrement())
  match_id         BigInt
  account_id       Int
  player_slot      Int
  hero_id          Int
  item_0           Int
  item_1           Int
  item_2           Int
  item_3           Int
  item_4           Int
  item_5           Int
  backpack_0       Int
  backpack_1       Int
  backpack_2       Int
  item_neutral     Int
  kills            Int
  deaths           Int
  assists          Int
  last_hits        Int
  denies           Int
  gold_per_min     Int
  xp_per_min       Int
  level            Int
  net_worth        Int
  aghanims_scepter Int
  aghanims_shard   Int
  moonshard        Int
  hero_damage      Int?
  tower_damage     Int?
  hero_healing     Int?
  gold             Int?
  gold_spent       Int?
  win              Boolean
  lose             Boolean
  total_gold       Int
  total_xp         Int
  kda              Float
  benchmarks       String
  match_detail     MatchDetail? @relation(fields: [match_id], references: [match_id])
  rounds           Round[]
  //user             User?        @relation(fields: [account_id], references: [account_id])

  @@unique([match_id, account_id], name: "matchPlusAccount")
}

//league and season models
model League {
  id          Int        @id @default(autoincrement())
  name        String
  lastUpdated DateTime   @default(now())
  createdDate DateTime   @default(now())
  creatorID   Int
  creator     User       @relation(fields: [creatorID], references: [account_id])
  members     DotaUser[]
  seasons     Season[]
}

model Season {
  id             Int            @id @default(autoincrement())
  name           String
  active         Boolean        @default(true)
  lastUpdated    DateTime       @default(now())
  startDate      DateTime
  endDate        DateTime
  type           String
  creatorID      Int
  leagueID       Int
  randoms        Random[]
  league         League         @relation(fields: [leagueID], references: [id])
  members        DotaUser[]
  season_results SeasonResult[]
  turbotowns     Turbotown[]
  decks          Deck[]
  users          SeasonUser[]
}

model SeasonResult {
  id         Int    @id @default(autoincrement())
  seasonID   Int
  account_id Int
  place      Int
  score      Int
  season     Season @relation(fields: [seasonID], references: [id])
}

model Random {
  id              Int              @id @default(autoincrement())
  account_id      Int
  active          Boolean
  status          String
  date            DateTime
  win             Boolean?
  endDate         DateTime?
  endMatchID      Int?
  endGold         Int?
  availableHeroes String
  bannedHeroes    String?
  selectedRoles   String?
  expectedGold    Int
  modifierAmount  Int
  modifierTotal   Int
  randomedHero    Int
  seasons         Season[]
  quests          TurbotownQuest[]
  user            User?            @relation(fields: [account_id], references: [account_id])
  match           Match?           @relation(fields: [endMatchID], references: [id])

  //@@unique([account_id, active], name: "matchPlusAccount")
}

//turbotown models
model Turbotown {
  id          Int               @id @default(autoincrement())
  account_id  Int
  seasonID    Int
  lastUpdated DateTime          @default(now())
  createdDate DateTime
  user        User?             @relation(fields: [account_id], references: [account_id])
  metrics     TurbotownMetric[]
  quests      TurbotownQuest[]
  season      Season?           @relation(fields: [seasonID], references: [id])
  items       TurbotownItem[]
  statuses    TurbotownStatus[]
  actions     TurbotownAction[] @relation("user")
  debuffs     TurbotownAction[] @relation("target")

  @@unique([account_id, seasonID], name: "accountPlusSeason")
}

model TurbotownMetric {
  id          Int      @id @default(autoincrement())
  turbotownID Int
  lastUpdated DateTime @default(now())
  label       String
  value       Int

  Turbotown Turbotown @relation(fields: [turbotownID], references: [id])

  @@unique([turbotownID, label], name: "townPlusLabel")
}

model TurbotownQuest {
  id          Int       @id @default(autoincrement())
  active      Boolean
  status      String
  win         Boolean?
  xp          Int
  gold        Int
  endXp       Int?
  endGold     Int?
  questSlot   Int
  type        String
  endDate     DateTime?
  lastUpdated DateTime  @default(now())
  createdDate DateTime
  randomID    Int
  turbotownID Int
  random      Random    @relation(fields: [randomID], references: [id], onDelete: Cascade)
  Turbotown   Turbotown @relation(fields: [turbotownID], references: [id])
}

model TurbotownItem {
  id          Int       @id @default(autoincrement())
  lastUpdated DateTime  @default(now())
  turbotownID Int
  itemID      Int
  turbotown   Turbotown @relation(fields: [turbotownID], references: [id])
  item        Item      @relation(fields: [itemID], references: [id])
  status      String
}

model TurbotownStatus {
  id           Int       @id @default(autoincrement())
  lastUpdated  DateTime  @default(now())
  name         String
  value        String
  isActive     Boolean
  appliedDate  DateTime
  resolvedDate DateTime?
  turbotownID  Int
  turbotown    Turbotown @relation(fields: [turbotownID], references: [id])
}

model TurbotownAction {
  id                     Int       @id @default(autoincrement())
  action                 String
  value                  String?
  appliedDate            DateTime
  endDate                DateTime
  turbotownID            Int
  turbotownDestinationID Int
  turbotown              Turbotown @relation("user", fields: [turbotownID], references: [id])
  turbotownDestination   Turbotown @relation("target", fields: [turbotownDestinationID], references: [id])
}

model Item {
  id                Int             @id @default(autoincrement())
  name              String
  description       String
  imgSrc            String
  goldCost          Int
  quantityAvailable Int
  active            Boolean
  TurbotownItem     TurbotownItem[]
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  // primary_key     Boolean
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Hero {
  id             Int    @id @unique
  name           String
  localized_name String
  primary_attr   String
  attack_type    String
  roles          String
  legs           Int?
  cards          Card[]
}

model FriendshipMMR {
  id          Int         @id @default(autoincrement())
  match_id    BigInt
  account_id  Int
  start_time  DateTime
  win         Boolean
  mmrModifier Float
  match       MatchDetail @relation(fields: [match_id], references: [match_id])
  dota_user   DotaUser    @relation(fields: [account_id], references: [account_id])

  @@unique([match_id, account_id], name: "matchPlusAccount")
}

// DotaDeck Game Models
enum StatType {
  KILLS
  ASSISTS
  NET_WORTH
  LAST_HITS
  DENIES
  DAMAGE
  HEALING
  BUILDING
  SUPPORT
  SCORE
}

enum EffectType {
  STAT_MULTIPLIER
  STAT_ADDER
  SCORE_MULTIPLIER
}

model HeroCard {
  id          String     @id @default(cuid())
  name        String     @unique
  cost        Int
  baseFormula String
  effectType  EffectType
  statType    StatType
  description String
  imageUrl    String

  isActive        Boolean @default(false)
  requiresTarget  Boolean @default(false)
  isDurationBased Boolean @default(false)
  isStackable     Boolean @default(false)

  owners    UserCard[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model UserCard {
  id           String          @id @default(cuid())
  userId       String
  cardId       String
  acquiredAt   DateTime        @default(now())
  timesPlayed  Int             @default(0)
  totalScore   Float           @default(0)
  lastPlayedAt DateTime?
  rounds       RoundUserCard[]

  user User     @relation(fields: [userId], references: [id])
  card HeroCard @relation(fields: [cardId], references: [id])

  @@unique([userId, cardId])
  @@index([userId])
  @@index([cardId])
}

enum GameStatus {
  ACTIVE
  COMPLETED
}

model DotaDeckGame {
  id              String     @id @default(cuid())
  userId          String
  gold            Int        @default(0)
  score           Int        @default(0)
  status          GameStatus @default(ACTIVE)
  soloGamesPlayed Int        @default(0)
  winStreak       Int        @default(0)
  playStreak      Int        @default(0)
  lastPlayedAt    DateTime?
  completedAt     DateTime?
  user            User       @relation(fields: [userId], references: [id])
  rounds          Round[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

enum RoundStatus {
  IN_PROGRESS
  COMPLETED
  FAILED
}

model Round {
  id         String      @id @default(cuid())
  matchId    BigInt?
  accountId  Int
  finalScore Int         @default(0)
  status     RoundStatus @default(IN_PROGRESS)

  gameId      String
  game        DotaDeckGame        @relation(fields: [gameId], references: [id])
  activeCards RoundUserCard[]
  matchStats  PlayersMatchDetail? @relation(fields: [matchId, accountId], references: [match_id, account_id])

  startedAt   DateTime  @default(now())
  completedAt DateTime?

  @@index([gameId])
  @@index([matchId, accountId])
}

model RoundUserCard {
  id         String @id @default(cuid())
  roundId    String
  userCardId String

  multiplierAchieved Float @default(1.0)
  scoreContribution  Int   @default(0)

  round    Round    @relation(fields: [roundId], references: [id])
  userCard UserCard @relation(fields: [userCardId], references: [id])

  @@index([roundId])
  @@index([userCardId])
}

model SeasonUser {
  id            String        @id @default(cuid())
  accountId     Int
  seasonId      Int
  handSize      Int           @default(3)
  discardTokens Int           @default(5)
  hasSeenRules  Boolean       @default(false)
  season        Season        @relation(fields: [seasonId], references: [id])
  user          DotaUser      @relation(fields: [accountId], references: [account_id])
  joinedAt      DateTime      @default(now())
  heldCards     Card[]        @relation("CurrentHolder")
  cardHistory   CardHistory[]
  heroDraws     HeroDraw[]

  @@unique([seasonId, accountId])
}

model Card {
  id            String        @id @default(cuid())
  heroId        Int
  hero          Hero          @relation(fields: [heroId], references: [id])
  baseGold      Int           @default(100)
  baseXP        Int           @default(100)
  goldMod       Int           @default(0)
  xpMod         Int           @default(0)
  drawLockCount Int           @default(0)
  lastDrawn     DateTime?
  currentHolder SeasonUser?   @relation("CurrentHolder", fields: [holderId], references: [id])
  holderId      String?
  drawnAt       DateTime?
  deckId        String?
  deck          Deck?         @relation(fields: [deckId], references: [id])
  position      Int? // Optional: position in the deck
  history       CardHistory[]
  heroDraws     HeroDraw[]

  @@index([deckId])
  @@index([heroId])
}

model Deck {
  id        String   @id @default(cuid())
  name      String
  seasonId  Int
  season    Season   @relation(fields: [seasonId], references: [id])
  cards     Card[]
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([seasonId, name])
}

enum CardAction {
  DRAWN
  DISCARDED
  QUEST_WIN
  QUEST_LOSS
  PASSIVE_MOD
}

enum ModType {
  ADD
  SUBTRACT
  RESET
  MODIFY
}

model CardHistory {
  id           String     @id @default(cuid())
  cardId       String
  card         Card       @relation(fields: [cardId], references: [id])
  action       CardAction
  modType      ModType
  seasonUserId String
  seasonUser   SeasonUser @relation(fields: [seasonUserId], references: [id])
  timestamp    DateTime   @default(now())
  currentGold  Int
  currentXP    Int
  goldMod      Int
  xpMod        Int
}

// Track when users draw heroes
model HeroDraw {
  id           String     @id @default(cuid())
  seasonUserId String
  heroId       Int
  drawnAt      DateTime   @default(now())
  matchResult  Boolean?
  matchId      String?
  cardId       String?
  seasonUser   SeasonUser @relation(fields: [seasonUserId], references: [id])
  card         Card?      @relation(fields: [cardId], references: [id])
}

// ---------------------------------------------------------------------------
// Incremental game (lineup battler PvE)
// ---------------------------------------------------------------------------

enum IncrementalRunStatus {
  ACTIVE
  WON
  DEAD
}

enum IncrementalNodeType {
  COMBAT
  ELITE
  BOSS
  SHOP
  EVENT
  REST
  BASE
}

// One save = one "game slot" (essence, roster, action state, lineups). User can have multiple saves.
// Currencies and items will move to Bank (see docs/incremental/BANK_SYSTEM.md) in a future migration.
model IncrementalSave {
  id        String   @id @default(cuid())
  userId    String
  name      String? // e.g. "Main", "Alt" – optional label
  essence   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user              User                              @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionState       IncrementalActionState?
  rosterHeroes      IncrementalRosterHero[]
  convertedMatches  IncrementalConvertedMatch[]
  lineups           IncrementalLineup[]
  heroTraining      IncrementalHeroTraining[]
  heroModifications IncrementalSaveHeroModification[]
  talentNodes       IncrementalTalentNode[]
  upgrades          IncrementalUpgrade[]

  @@index([userId])
}

model IncrementalLineup {
  id        String   @id @default(cuid())
  saveId    String
  name      String
  heroIds   Int[] // ordered array of Hero.id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  save IncrementalSave  @relation(fields: [saveId], references: [id], onDelete: Cascade)
  runs IncrementalRun[]

  @@index([saveId])
}

model IncrementalRun {
  id             String               @id @default(cuid())
  userId         String
  lineupId       String
  status         IncrementalRunStatus @default(ACTIVE)
  currentNodeId  String // id of current IncrementalMapNode
  startedAt      DateTime             @default(now())
  finishedAt     DateTime?
  seed           String? // optional for reproducible maps
  gold           Int                  @default(0)
  heroHp         Json? // number[] HP per lineup index after last encounter; null = full HP (e.g. after base)
  xpByHeroId     Json? // Record<string, number> heroId -> XP
  nodeClearances Json? // Record<nodeId, { outcome: 'victory'|'skip', durationSeconds?: number, gold?: number, ... }> per cleared node
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  user   User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  lineup IncrementalLineup    @relation(fields: [lineupId], references: [id], onDelete: Cascade)
  nodes  IncrementalMapNode[]

  @@index([userId])
  @@index([lineupId])
}

model IncrementalMapNode {
  id          String              @id @default(cuid())
  runId       String
  nodeType    IncrementalNodeType
  encounterId String? // set for combat / elite / boss
  nextNodeIds String[] // ids of reachable nodes (stored as text array or JSON in PG)
  floor       Int?
  act         Int?

  run IncrementalRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId])
}

// Phase 6: per-save essence, browser actions, roster
model IncrementalActionState {
  id            String   @id @default(cuid())
  saveId        String   @unique
  actionType    String // "mining" | "training"
  progress      Float    @default(0) // 0..1 within current strike
  lastTickAt    DateTime @default(now())
  actionHeroId  Int? // when actionType = training: which hero
  actionStatKey String? // when actionType = training: which stat (e.g. spell_power)

  save IncrementalSave @relation(fields: [saveId], references: [id], onDelete: Cascade)

  @@index([saveId])
}

model IncrementalRosterHero {
  id        String   @id @default(cuid())
  saveId    String
  heroId    Int // Hero.id
  createdAt DateTime @default(now())

  save IncrementalSave @relation(fields: [saveId], references: [id], onDelete: Cascade)

  @@unique([saveId, heroId])
  @@index([saveId])
}

model IncrementalConvertedMatch {
  id        String   @id @default(cuid())
  saveId    String
  matchId   BigInt // Match.match_id
  createdAt DateTime @default(now())

  save IncrementalSave @relation(fields: [saveId], references: [id], onDelete: Cascade)

  @@unique([saveId, matchId])
  @@index([saveId])
}

// Phase 13: per-hero per-stat trained values (idle training)
model IncrementalHeroTraining {
  id        String   @id @default(cuid())
  saveId    String
  heroId    Int // Hero.id
  statKey   String // hp, attack_damage, spell_power, attack_speed, spell_haste, armor, magic_resist
  value     Float    @default(0) // trained amount (up to 3 decimal places)
  updatedAt DateTime @updatedAt

  save IncrementalSave @relation(fields: [saveId], references: [id], onDelete: Cascade)

  @@unique([saveId, heroId, statKey])
  @@index([saveId])
  @@index([saveId, heroId])
}

// Phase 13: talent tree – purchased nodes per save (node definitions in constants)
model IncrementalTalentNode {
  id        String   @id @default(cuid())
  saveId    String
  nodeId    String // e.g. unlock_swift_forge, spell_power_training_15
  createdAt DateTime @default(now())

  save IncrementalSave @relation(fields: [saveId], references: [id], onDelete: Cascade)

  @@unique([saveId, nodeId])
  @@index([saveId])
}

// Phase 13.6: extensible upgrade system (mining level, building upgrades, future skills)
model IncrementalUpgrade {
  id          String   @id @default(cuid())
  saveId      String
  upgradeType String // e.g., "mining", "building_hp", "building_spell_power", future: "woodcutting", "crafting", etc.
  level       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  save IncrementalSave @relation(fields: [saveId], references: [id], onDelete: Cascade)

  @@unique([saveId, upgradeType])
  @@index([saveId])
}

// Balance data: hero base stats and abilities (seeded from heroes_base_stats.csv + hero_abilities.csv)
model IncrementalHeroBaseStat {
  heroId             Int      @unique // Hero.id
  localizedName      String
  primaryAttribute   String
  baseAttackInterval Float
  baseAttackDamage   Int
  baseMaxHp          Int
  baseArmor          Float
  baseMagicResist    Float
  baseSpellInterval  Float?
  abilityId1         String
  abilityId2         String
  updatedAt          DateTime @updatedAt

  @@index([heroId])
}

model IncrementalHeroAbility {
  id                String   @id // e.g. antimage_1
  abilityName       String
  description       String? // user-facing explanation of what the ability does
  type              String // active | passive
  trigger           String
  effect            String
  target            String
  damageType        String?
  baseDamage        Int?
  returnDamageRatio Float?
  updatedAt         DateTime @updatedAt

  @@index([id])
}

// Extensible per-save, per-hero modifications (spell overrides, equipment, etc.).
// Training deltas live in IncrementalHeroTraining. Effective hero = base (IncrementalHeroBaseStat)
// + training (IncrementalHeroTraining) + modifications here (e.g. kind: "spell_override", key: "ability_1").
model IncrementalSaveHeroModification {
  id        String   @id @default(cuid())
  saveId    String
  heroId    Int
  kind      String // e.g. "spell_override", "equipment", "talent"
  key       String // e.g. "ability_1", "slot_0"
  valueJson String // JSON value; interpretation depends on kind+key
  updatedAt DateTime @updatedAt

  save IncrementalSave @relation(fields: [saveId], references: [id], onDelete: Cascade)

  @@unique([saveId, heroId, kind, key])
  @@index([saveId])
  @@index([saveId, heroId])
}
