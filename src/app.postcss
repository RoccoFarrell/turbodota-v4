@keyframes fly-up {
  0% { transform: translateY(0); opacity: 1; }
  100% { transform: translateY(-20px); opacity: 0; }
}

.animate-fly-up {
  animation: fly-up 1s ease-out forwards;
}

@keyframes shake {
  0%, 100% { transform: translateX(0) translateY(-8px); }
  25% { transform: translateX(-1px) translateY(-8px); }
  75% { transform: translateX(1px) translateY(-8px); }
} 